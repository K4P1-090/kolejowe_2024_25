@model List<cw1.Models.Book>
@{
    ViewData["Title"] = "Index";
    ViewBag.Sort = ViewBag.Sort ?? "asc";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/style.css">
    <title>Document</title>
</head>

<body>
    <h1>Zbiór książek</h1>
    <table class="table table-striped">
        <tr>
            <th>Lp</th>
            <th>
                <a asp-action="OrderedBoks" asp-route-sort="@ViewBag.Sort"> Tytuł</a>

            </th>
            <th>Autor</th>
            <th>Cena</th>
            <th> ---- </th>
        </tr>
        @{
            int lp = 0;
        }

        @foreach (var book in Model)
        {
            lp++;
            <tr>
                <td>@lp</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Price</td>
                <td>
                    <a class="btn btn-danger" asp-action="DeleteBook" 
                    asp-route-id="@book.Id">Usuń</a>
                    <a class="btn btn-warning" asp-action="UpdateBook" 
                    asp-route-id="@book.Id">Edytuj</a>
                </td>
            </tr>
        }
    </table>

    <div>
        <a asp-action="AddNewBook">Dodaj nową książkę</a>
    </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

</html>
