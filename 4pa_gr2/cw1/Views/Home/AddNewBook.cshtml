@model cw1.Models.Book

@{
    ViewData["Title"] = "AddNewBook";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/style.css">
    <title>Document</title>
</head>

<body>
    <h1>Dodawanie nowej książki</h1>
    <form asp-action="AddNewBook" method="post">
        <div class="row m-3">
            <label class="col-3 text-end" asp-for="Title"></label>
            <input class="col-6" type="text" asp-for="Title">
            <span asp-validation-for="Title" class="col-3 text-danger"></span>
        </div>
        <div class="row m-3">
            <label class="col-3 text-end" asp-for="Author"></label>
            <input class="col-6" type="text" asp-for="Author">
            <span asp-validation-for="Author" class="col-3 text-danger"></span>
        </div>
        <div class="row m-3">
            <label class="col-3 text-end" asp-for="Price"></label>
            <input class="col-6" type="number" asp-for="Price" step="0.01">
            <span asp-validation-for="Price" class="col-3 text-danger"></span>
        </div>
        <div class="row m-3">
            <input type="submit" value="Dodaj książkę" class="col-6 offset-3 btn btn-primary">
        </div>
    </form>
    <a asp-action="Index">Do listy książek</a>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>
