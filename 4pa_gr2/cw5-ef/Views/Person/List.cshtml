<h1>Lista kontaktów</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Lp</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Data urodzenia</th>
            <th></th>
        </tr>
    </thead>
 <tbody>
    @{int lp = 0;}
    @foreach(var p in Model){
        lp++;
        <tr>
            <td>@lp</td>
            <td>@p.FirstName</td>
            <td>@p.LastName</td>
            <td>@p.BirthDate</td>
            <td><a asp-action="DeletePerson" 
            asp-route-id="@p.Id" class="btn btn-danger">
            Usuń
            </a></td>
        </tr>
    }
 </tbody>
</table>
<div>
    <a asp-action="AddPerson" class="btn btn-secondary w-50">Dodaj nowy kontakt</a>
</div>