@page
@model cw6.Pages.IndexModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/cw6.css">
    <title>ćwiczenie 6</title>
</head>
<body>
    <div class="container">
         <h1>Lista filmów</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Lp</th>
                <th>Tytuł</th>
                <th>Reżyser</th>
                <th>Rok produkcji</th>
                <th>Rodzaj filmu</th>
                <th>Cena</th>
                <th>Operacje</th>
            </tr>
        </thead>
        <tbody>
            @{int lp = 0;}

            @foreach(var movie in Model.Movies){
                lp++;
                <tr>
                    <td>@lp</td>
                    <td>@movie.Title</td>
                    <td>@movie.Director</td>
                    <td>@movie.ReleaseDate</td>
                    <td>@movie.Genre</td>
                    <td class="text-end">@movie.Price</td>
                    <td>
                      <a class="btn btn-danger" asp-page="DeleteMovie" asp-route-id="@movie.Id">Usuń</a> 
                      <a class="btn btn-secondary" asp-page="EditMovie" asp-route-id="@movie.Id">Edytuj</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-page="Games">Gry</a>
        <a asp-page="AddMovie">Dodaj film</a>
    </div>
    </div>
   
</body>
</html>
