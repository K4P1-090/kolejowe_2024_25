@model cw1.Models.Movie
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/style.css">
    <title>Lista filmów</title>
</head>
<body>
    <div class="container">
         <h1>Edytuj film</h1>
         <form asp-action="UpdateMovie" method="post">
            <input type="hidden" asp-for="Id">
            <div class="row m-2">
                <input type="text" asp-for="Title" class="col-6" placeholder="Podaj tytuł">
                <span asp-validation-for="Title" class="col-3 text-danger"></span>
            </div>
            <div class="row m-2">
                <input type="text" asp-for="Director" class="col-6" placeholder="Podaj reżysera">
                <span asp-validation-for="Director" class="col-3 text-danger"></span>
            </div>
            <div class="row m-2">
                <input type="number" asp-for="Year" class="col-6" placeholder="Rok produkcji">
                <span asp-validation-for="Year" class="col-3 text-danger"></span>
            </div>
            <div class="row m-2">
                <input type="submit" value="Zapisz" class="col-6 btn btn-primary">
            </div>
        </form>
    </div>
   
</body>
</html>
