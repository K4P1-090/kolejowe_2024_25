@model List<cw1.Models.Movie>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/style.css">
    <title>Lista filmów</title>
</head>

<body>
    <main class="container">
        <h1>Zbiór filmów</h1>
        <div>
            <a asp-action="Create" class="btn btn-primary w-50 mb-4">Dodaj film</a>
        </div>
        <table class="table table-striped">
            <tr>
                <th>Tytuł</th>
                <th>Reżyser</th>
                <th>Rok produkcji</th>
                <th>Operacje</th>
            </tr>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Director</td>
                    <td>@movie.Year</td>
                    <td>
                        <a asp-action="DeleteMovie" asp-route-id="@movie.Id"
                        class="btn btn-danger">Usuń</a>
                         <a asp-action="UpdateMovie" asp-route-id="@movie.Id"
                        class="btn btn-secondary">Zmień</a>
                    </td>
                </tr>
            }
        </table>
        <div>
            <div>
                <a class="btn btn-primary" asp-action="Kolejowe">Do kolejowego</a>
            </div>
        </div>
    </main>


</body>

</html>