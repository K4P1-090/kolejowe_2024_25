@model List<cw1.Models.Product>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/style.css">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <h1>Lista produktów</h1>
        <div>
            <a asp-action="AddProduct" class="btn btn-outline-secondary">Dodaj produkt</a>
        </div>
        <table class="table table-striped">
            <tr>
                <th>
                    Lp
                </th>
                <th>
                    <a asp-action="IndexSort" asp-route-sort="name">Nazwa</a>
                </th>
                <th>
                    <a asp-action="IndexSort" asp-route-sort="category">Kategoria</a>
                </th>
                <th>
                    <a asp-action="IndexSort" asp-route-sort="price">Cena</a>
                </th>
                <th>
                    --------
                </th>
            </tr>
            @{
                int lp = 0;
            }
            @foreach (var product in Model)
            {
                lp++;
                <tr>
                    <td>@lp</td>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td class="text-end">@product.Price</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger">Usuń</a>
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-primary">Edytuj</a>
                    </td>
                </tr>
            }
        </table>
    </div>

    <script src="~/script.js" defer></script>
</body>

</html>