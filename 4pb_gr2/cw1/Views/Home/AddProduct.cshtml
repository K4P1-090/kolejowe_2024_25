@model cw1.Models.Product
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/style.css">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <form method="post" asp-action="AddProduct">
            <div class="row m-3">
                <input type="text" asp-for="Name" class="col-6" placeholder="Podaj nazwe produktu">
                <span class="col-3 text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="row m-3">
                <input type="text" asp-for="Category" class="col-6" placeholder="Podaj nazwe kategorii">
                <span class="col-3 text-danger" asp-validation-for="Category"></span>
            </div>
            <div class="row m-3">
                <input step="0.01" type="number" asp-for="Price" class="col-6" placeholder="Podaj cenę produktu">
                <span class="col-3 text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="row m-3">
                <input type="submit" class="btn btn-primary col-6" value="Dodaj produkt">
            </div>
        </form>

        <div>
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                Powrót do listy produktów</a>
        </div>
    </div>

    <script src="~/script.js" defer></script>
</body>

</html>