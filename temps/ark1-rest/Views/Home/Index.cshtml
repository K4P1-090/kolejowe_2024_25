@model ark1_rest.Models.MyReservation
<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8" />
	<title>Restauracja Wszystkie Smaki</title>
	<link rel="stylesheet" href="~/styl_1.css" />
</head>

<body>
	<header>
		<h1>Witamy w restauracji "Wszystkie Smaki"</h1>
	</header>
	<main>
		<section id="lewy">
			<img src="menu.jpg" alt="Nasze danie" />
		</section>
		<section id="prawy">
			<h4>U nas dobrze zjesz!</h4>
			<ol>
				<li>Obiady od 40 zł</li>
				<li>Przekąski od 10 zł</li>
				<li>Kolacje od 20 zł</li>
			</ol>
		</section>
		<section id="dolny">
			<h2>Zarezerwuj stolik on-line</h2>
			<form asp-action="Index" method="post">
				<label>
					Data: </label><br />
				<input type="date" asp-for="DateRes"><br />

				<label>
					Ile osób?</label><br />
				<input type="number" asp-for="Count"><br />

				<label>
					Twój numer telefonu:</label><br />
				<input asp-for="Phone"><br />

				<label>
					<input type="checkbox" id="check" />
					Zgadzam się na przetwarzanie moich danych osobowych<br />
				</label>
				<button type=" reset">WYCZYŚĆ</button>
				<button type="submit">ZAREZERWUJ</button>
			</form>
		</section>
	</main>
	<footer>
		Stronę internetową opracował: <i>XXXXXXXXXXX1</i>
	</footer>
</body>

</html>