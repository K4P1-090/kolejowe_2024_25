@model List<Movie>
@{
    ViewData["Title"] = "Zbór filmów";
}

<h1>Lista filmów</h1>
<a asp-action="InsertMovie" class="btn btn-outline-primary p-2">Dodaj nowy film</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Lp</th>
            <th>Tytuł</th>
            <th>Reżyser</th>
            <th>Cena</th>
            <th> ----- </th>
        </tr>
    </thead>
    <tbody>
        @{int lp = 0;}
        @foreach (var movie in Model)
        {
            lp++;
            <tr>
                <td>@lp</td>
                <td>@movie.Title</td>
                <td>@movie.Director</td>
                <td>@movie.Price</td>
                <td>
                    <a asp-action="EditMovie" asp-route-id="@movie.Id" 
                         class="btn btn-outline-primary p-2">Edytuj</a>
                    <a asp-action="DeleteMovie" asp-route-id="@movie.Id" 
                         class="btn btn-outline-danger p-2">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>