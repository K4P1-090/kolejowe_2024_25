@model cw1.Models.Book

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/style.css">
    <title>Wstaw Książkę</title>
</head>

<body>
<div class="container">
    <h1>dodaj książkę do zbioru</h1>
    <form asp-action="InsertBook" method="post">
        <div class="row m-3">
            <label class="col-3 text-end" asp-for="Title"></label>
            <input type="text" class="col-6" asp-for="Title" />
            <span asp-validation-for="Title" class="col-3 text-danger"></span>
        </div>
        <div class="row m-3">
            <label class="col-3 text-end" asp-for="Author"></label>
            <input type="text" class="col-6" asp-for="Author" />
            <span asp-validation-for="Author" class="col-3 text-danger"></span>
        </div>
        <div class="row m-3">
            <label class="col-3 text-end" asp-for="Price"></label>
            <input type="number" class="col-6" asp-for="Price" step="0.01"/>
            <span asp-validation-for="Price" class="col-3 text-danger"></span>
        </div>
        <div class="row m-3">
            <input type="submit" class="col-6 offset-3 btn btn-primary" value="Dodaj książkę" />
        </div>
    </form>
</div>
</body>

</html>