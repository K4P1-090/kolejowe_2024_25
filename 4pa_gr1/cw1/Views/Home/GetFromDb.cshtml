@model List<cw1.Models.Book>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/style.css">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <h1>Zbiór książek z Sqlite</h1>
        <div>
            <a asp-action="InsertBook" class="btn btn-primary">Dodaj książkę do zbioru</a>
        </div>
        <div>
            <a class="btn btn-primary" asp-action="Index">Index</a>
        </div>
        <table class="table table-striped">
            <tr>
                <th>Lp</th>
                <th>Tytuł</th>
                <th>Autor</th>
                <th>Cena</th>
                <th> --- </th>
            </tr>
            @{
                int lp = 0;
            }
            @foreach (var book in Model)
            {
                lp++;
                <tr>
                    <td>@lp</td>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td class="text-end">@book.Price</td>
                    <td class="text-end">
                        <a asp-controller="Home"
                        asp-action="DeleteBook" asp-route-id="@book.Id"
                           class="btn btn-danger">Usuń</a>
                    </td>
                </tr>
            }
        </table>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>